<?xml version="1.0"?>
<odoo>

        <record model="ir.ui.view" id="quality_checklist_form_view">
            <field name="name">quality checklist form view</field>
            <field name="model">quality.checklist</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>

                            </group>
                            <group>
                                <field name="checklist_name_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_quality_checklist_list" model="ir.ui.view">
            <field name="name">quality.checklist.list</field>
            <field name="model">quality.checklist</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <list string="Quality Checklist">
                    <field name="name"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="action_view_quality_checklist" model="ir.actions.act_window">
            <field name="name">Quality Checklist</field>
            <field name="res_model">quality.checklist</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p>Job Card management allows you to manage the quality checklist.
                    <!-- Odoo's project management allows you to manage the pipeline of your tasks efficiently. You can track progress, discuss on tasks, attach documents, etc -->.
                </p>
            </field>
        </record>



     <menuitem id="menu_quality_checklist" name="Quality Checklist" parent="job_category_menu_root"
              action="action_view_quality_checklist" sequence="6"/>
</odoo>