<odoo>
    <record id="view_service_description_list" model="ir.ui.view">
        <field name="name">service.description.list</field>
        <field name="model">service.description</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="parts_id"/>
                <field name="labour_charge"/>
                <field name="material"/>
            </list>
        </field>
    </record>

    <record id="view_service_description_form" model="ir.ui.view">
        <field name="name">service.description.form</field>
        <field name="model">service.description</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="parts_id"/>
                        <field name="labour_charge"/>
                        <field name="material"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>




    <record id="action_service_description" model="ir.actions.act_window">
        <field name="name">Service Description</field>
        <field name="res_model">service.description</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_service_description" name="Service Description" parent="job_category_menu_root"
              action="action_service_description" sequence="10"/>

</odoo>
