<odoo>
<record id="product_template_vehicle_info_page" model="ir.ui.view">
    <field name="name">product.template.vehicle.info</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">

        <xpath expr="//field[@name='categ_id']" position="after">
            <field name="menu_service"/>
            <field name="service_amount"/>
        </xpath>


<!--         <xpath expr="//div[hasclass('oe_title')]" position="inside">-->
<!--                <field name="part_no" placeholder="e.g. Part No"/>-->
<!--            </xpath>-->


        <xpath expr="//div[hasclass('oe_title')]" position="inside">
                <div class="o_form_label o_td_label">
                    <label for="part_no"/>
                </div>
                <div>
                    <field name="part_no"/>
                </div>
            </xpath>






        <xpath expr="//field[@name='default_code']" position="attributes">
            <attribute name="string">Internal Reference</attribute>
        </xpath>


    </field>
</record>

    <record id="product_template_simple_search_extend" model="ir.ui.view">
    <field name="name">product.template.simple.search.extend</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_search_view"/>
    <field name="arch" type="xml">
        <!-- Add model_id and vin_sn as simple search fields -->
        <xpath expr="//field[@name='name']" position="after">
            <field name="model_id"/>
            <field name="vin_sn"/>
            <field name="year_of_manufacturing"/>
            <field name="colour_type"/>
        </xpath>
    </field>
</record>


    <record id="product_template_tree_inherit_vehicle" model="ir.ui.view">
        <field name="name">product.template.tree.vehicle</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <!-- Add model_id and vin_sn after the name field -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="vin_sn"/>
                <field name="model_id"/>
                <field name="year_of_manufacturing"/>
                <field name="colour_type"/>

            </xpath>
        </field>
    </record>


</odoo>






