<odoo>
    <template id="report_job_card_service_template">
    <t t-call="web.html_container">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 style="text-align:center;">Job Card Service Report</h2>

                <table style="width:100%; border:1px solid black; border-collapse: collapse;">
                    <thead>
                        <tr style="background-color:#f0f0f0;">
                            <th style="border:1px solid black; padding:5px;">Job Card</th>
                            <th style="border:1px solid black; padding:5px;">Menu Service</th>
                            <th style="border:1px solid black; padding:5px;">Service Amount</th>
                            <th style="border:1px solid black; padding:5px;">Products</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="env['job.card.management'].search([])" t-as="job_card">
                            <t t-foreach="job_card.service_line_ids" t-as="line">
                                <tr>
                                    <td style="border:1px solid black; padding:5px;"><t t-esc="job_card.name"/></td>
                                    <td style="border:1px solid black; padding:5px;"><t t-esc="line.menu_service"/></td>
                                    <td style="border:1px solid black; padding:5px;"><t t-esc="line.service_amount"/></td>
                                    <td style="border:1px solid black; padding:5px;">
                                        <t t-esc="', '.join(line.product_template_ids.mapped('name'))"/>
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </t>
</template>

