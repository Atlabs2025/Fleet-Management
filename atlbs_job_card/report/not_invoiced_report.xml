<odoo>
    <template id="report_job_card_not_completed_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align:center;">Not Fully Invoiced Job Cards</h2>

                    <table style="width:100%; border:1px solid black; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color:#f0f0f0;">
                                <th style="border:1px solid black; padding:5px;">Job Card</th>
                                <th style="border:1px solid black; padding:5px;">Customer</th>
                                <th style="border:1px solid black; padding:5px;">Vehicle</th>
                                <th style="border:1px solid black; padding:5px;">Status</th>
                                <th style="border:1px solid black; padding:5px;">Grand Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="env['job.card.management'].search([('state','!=','completed')])"
                               t-as="job_card">
                                <tr>
                                    <td style="border:1px solid black; padding:5px;">
                                        <t t-esc="job_card.name"/>
                                    </td>
                                    <td style="border:1px solid black; padding:5px;">
                                        <t t-esc="job_card.partner_id.name"/>
                                    </td>
                                    <td style="border:1px solid black; padding:5px;">
                                        <t t-esc="job_card.register_no.name"/>
                                    </td>
                                    <td style="border:1px solid black; padding:5px;">
                                        <t t-esc="job_card.state"/>
                                    </td>
                                    <td style="border:1px solid black; padding:5px;">
                                        <t t-esc="job_card.total_amount"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
