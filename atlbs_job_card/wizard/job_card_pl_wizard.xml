<odoo>


    <!-- Wizard View -->
    <record id="view_job_card_pl_wizard" model="ir.ui.view">
        <field name="name">job.card.pl.wizard.form</field>
        <field name="model">job.card.pl.wizard</field>
        <field name="arch" type="xml">
            <form string="Job Card P&amp;L">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_print_xlsx" type="object" string="Print XLSX" class="btn-primary"/>
                     <button name="action_view_report" type="object" string="View Report" class="btn-info"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_job_card_pl_wizard" model="ir.actions.act_window">
        <field name="name">Job Card P&amp;L</field>
        <field name="res_model">job.card.pl.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>







    <record id="view_job_card_pl_line_tree" model="ir.ui.view">
    <field name="name">job.card.pl.line.tree</field>
    <field name="model">job.card.pl.line</field>
    <field name="arch" type="xml">
        <list string="Job Card P&amp;L Report">
            <field name="date"/>
            <field name="job_card"/>
            <field name="estimate"/>
            <field name="invoice"/>
            <field name="vehicle"/>
            <field name="vin"/>
            <field name="labor"/>
            <field name="parts"/>
            <field name="material"/>
            <field name="sublet"/>
            <field name="total"/>
            <field name="labor_cost"/>
            <field name="parts_cost"/>
            <field name="material_cost"/>
            <field name="sublet_cost"/>
            <field name="total_expense"/>
        </list>
    </field>
</record>





      <menuitem id="job_card_pl_report_menu_root" name="Job Card P&amp;L Reports" parent="menu_job_card_root"
              sequence="54"/>
    <menuitem id="menu_job_card_pl" name="Job Card P&amp;L" parent="job_card_pl_report_menu_root"
              action="action_job_card_pl_wizard"/>




</odoo>





